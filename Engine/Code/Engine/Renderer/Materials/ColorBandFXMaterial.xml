<Material name="ColorBandFX">
    <VertexShader  EngineShader="true" headerSrc="Shaders/" shaderName="ColorBandEffect_v" src="Shaders/Stages/ColorBandEffect_v.hlsl" entryPoint="VertexMain"/>
	<PixelShader   EngineShader="true" headerSrc="Shaders/" shaderName="ColorBandEffect_p" src="Shaders/Stages/ColorBandEffect_p.hlsl" entryPoint="PixelMain"/>
	<DepthStencil depthFunction="ALWAYS" writeDepth="false"/>
	<BlendMode value="Opaque"/>
